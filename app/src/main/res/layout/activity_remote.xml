<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.home.apps.plexremote.remote">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <ImageView
                android:id="@+id/bttn_rewind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8px"
                android:src="@drawable/bttn_rewind"/>
            <ImageView
                android:id="@+id/bttn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8px"
                android:src="@drawable/bttn_play"/>
            <ImageView
                android:id="@+id/bttn_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8px"
                android:src="@drawable/bttn_pause"/>
            <ImageView
                android:id="@+id/bttn_fastforward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bttn_fastforward"/>
        </LinearLayout>

    <RelativeLayout
        android:id="@+id/dpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250px"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/bttn_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bttn_up"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/bttn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="-6dp"
                android:src="@drawable/bttn_left"/>

            <ImageView
                android:id="@+id/bttn_OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/bttn_left"
                android:layout_toEndOf="@+id/bttn_left"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="-8dp"
                android:src="@drawable/bttn_ok"/>

            <ImageView
                android:id="@+id/bttn_right"
                android:layout_toRightOf="@id/bttn_OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="-5dp"
                android:src="@drawable/bttn_right"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/middle"
            android:layout_marginTop="-25dp">
            <ImageView
                android:id="@+id/bttn_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bttn_down"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/back"
        android:layout_below="@id/dpad"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bttn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bttn_back_arrow"/>
        </RelativeLayout>
</RelativeLayout>
